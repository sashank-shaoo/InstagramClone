# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/instagram
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/instagram?retryWrites=true&w=majority

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cloudinary Configuration (for images and videos)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Instagram Clone

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
EMAIL_RATE_LIMIT_PER_USER=5
EMAIL_RATE_LIMIT_WINDOW_MS=3600000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For multiple origins, use comma-separated values:
# CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# File Upload Limits (in bytes)
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
